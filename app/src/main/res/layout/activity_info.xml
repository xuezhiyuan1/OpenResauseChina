<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00ff00">
        <ImageView
            android:id="@+id/backBtninfo"
            android:src="@drawable/btn_back_normal"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="50dp"
            android:text="我的资料"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/text1"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:text="加入于："
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/datas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017/04/08"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/text1"
            android:textColor="#000000"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#5353"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/text2"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:text="所在地区："
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/dizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/text2"
            android:textColor="#000000"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#5353"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/text3"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:text="开发平台："
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/pingtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/text3"
            android:textColor="#000000"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#5353"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/text4"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:text="专业领域："
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/lingyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/text4"
            android:textColor="#000000"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#5353"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/text5"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:text="个性签名："
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:background="#ffffff"/>
        <TextView
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这个人很懒，啥也没写"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/text5"
            android:textColor="#000000"
            android:textSize="20sp"
            />
    </RelativeLayout>

</LinearLayout>
